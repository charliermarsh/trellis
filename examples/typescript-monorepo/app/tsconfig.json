{
  "include": ["src"],
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "incremental": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "lib",
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "paths": {
      "@demo/core/*": ["../packages/core/src/*"]
    }
  },
  "references": [
    {
      "path": "../packages/core"
    }
  ]
}
